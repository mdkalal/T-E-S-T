                    </tr>
                    @{
                        //To make unique Id
                        int i = 0;
                        foreach (var item in Model.Movies)
                        {
                            <tr>
                                <td>
                                    @Html.EditorFor(o => o.Movies[i].Id)
                                </td>
                                <td>
